<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F9F8"
    android:backgroundTint="#F4F9F8"
    tools:context=".Inicio">

    <Button
        android:id="@+id/Filtrar"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="45dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/botones_blancos"
        android:padding="0dp"
        android:text="Filtrar"
        android:textAllCaps="false"
        android:textColor="#072D4B"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@+id/barra_busqueda"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/bttnInicio"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:autoSizeTextType="none"
            android:text="Inicio"
            android:textColor="#072D4B"
            android:textSize="8sp" />

        <Button
            android:id="@+id/bttnMisPreguntas"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:text="Mis Preguntas"
            android:textColor="#072D4B"
            android:textSize="8sp" />

        <Button
            android:id="@+id/bttnMisRespuestas"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Mis respuestas"
            android:textColor="#072D4B"
            android:textSize="8sp" />

        <Button
            android:id="@+id/bttnCanje"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Canje"
            android:textColor="#072D4B"
            android:textSize="8sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/barra_busqueda"
        android:layout_width="250dp"
        android:layout_height="23dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/back"
        android:drawableRight="@drawable/lupa"
        android:hint="@string/busqueda"
        android:pointerIcon="cell"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/logoP"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@+id/miPerfil"
        app:layout_constraintStart_toEndOf="@+id/barra_busqueda"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/miPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:text="Mi Perfil"
        android:textColor="#072D4B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgUser"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoP"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/barra_busqueda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/p" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:background="#2E7335"
            app:srcCompat="@drawable/estado" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2E7335"
            android:visibility="invisible"
            app:srcCompat="@drawable/estado" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2E7335"
            android:visibility="invisible"
            app:srcCompat="@drawable/estado" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2E7335"
            android:visibility="invisible"
            app:srcCompat="@drawable/estado" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/todo"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="@drawable/botones"
            android:padding="0dp"
            android:text="Todo"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="8sp" />

        <Button
            android:id="@+id/Matemática"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botones_blancos"
            android:padding="0dp"
            android:text="Matemática"
            android:textAllCaps="false"
            android:textColor="#072D4B"
            android:textSize="8sp" />

        <Button
            android:id="@+id/Física"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botones_blancos"
            android:padding="0dp"
            android:text="Física"
            android:textAllCaps="false"
            android:textColor="#072D4B"
            android:textSize="8sp" />

        <Button
            android:id="@+id/Química"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botones_blancos"
            android:padding="0dp"
            android:text="Química"
            android:textAllCaps="false"
            android:textColor="#072D4B"
            android:textSize="8sp" />

        <Button
            android:id="@+id/Geometría"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botones_blancos"
            android:padding="0dp"
            android:text="Geometría"
            android:textAllCaps="false"
            android:textColor="#072D4B"
            android:textSize="8sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pregunta1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="41dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="31dp"
        android:background="@drawable/cajas_respuestas"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Filtrar">


        <TextView
            android:id="@+id/tituloPregunta1"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:layout_margin="10dp"
            android:text="Lorem Ipsum"
            android:textColor="#072D4B" />

        <TextView
            android:id="@+id/descripcionPregunta1"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
            android:textColor="#81072D4B" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usuarioPregunta1"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Usuario1" />

            <TextView
                android:id="@+id/fechaPregunta1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="09/05/2022"
                android:textAlignment="textEnd" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pregunta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/cajas_respuestas"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregunta1">


        <TextView
            android:id="@+id/tituloPregunta2"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:layout_margin="10dp"
            android:text="Lorem Ipsum"
            android:textColor="#072D4B" />

        <TextView
            android:id="@+id/descripcionPregunta2"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
            android:textColor="#81072D4B" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usuarioPregunta2"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Usuario1" />

            <TextView
                android:id="@+id/fechaPregunta2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="09/05/2022"
                android:textAlignment="textEnd" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pregunta3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/cajas_respuestas"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pregunta2">


        <TextView
            android:id="@+id/tituloPregunta3"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:layout_margin="10dp"
            android:text="Lorem Ipsum"
            android:textColor="#072D4B" />

        <TextView
            android:id="@+id/descripcionPregunta3"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s"
            android:textColor="#81072D4B" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/usuarioPregunta3"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="Usuario1" />

            <TextView
                android:id="@+id/fechaPregunta3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:text="09/05/2022"
                android:textAlignment="textEnd" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>