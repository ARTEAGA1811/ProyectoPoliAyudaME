<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F9F8"
    android:backgroundTint="#F4F9F8"
    tools:context=".Inicio">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintTop_toBottomOf="@+id/barra_busqueda"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/bttnInicio"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:autoSizeTextType="none"
            android:text="@string/inicio"
            android:textColor="#072D4B"
            android:textSize="8sp" />

        <Button
            android:id="@+id/bttnMisPreguntas"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:text="@string/mis_preguntas"
            android:textColor="#072D4B"
            android:textSize="8sp" />

        <Button
            android:id="@+id/bttnMisRespuestas"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="@string/mis_respuestas"
            android:textColor="#072D4B"
            android:textSize="8sp" />

        <Button
            android:id="@+id/bttnCanje"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="@string/canje"
            android:textColor="#072D4B"
            android:textSize="8sp" />

    </LinearLayout>

    <EditText
        android:id="@+id/barra_busqueda"
        android:layout_width="236dp"
        android:layout_height="26dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/back"
        android:hint="@string/busqueda"
        android:pointerIcon="cell"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/logoP"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/imageViewLupa"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/miPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="5dp"
        android:text="@string/mi_perfil"
        android:textColor="#072D4B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgUser"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logoP"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@+id/barra_busqueda"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/p" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/imgEstadoInicio"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:background="#2E7335"
            app:srcCompat="@drawable/estado" />

        <ImageView
            android:id="@+id/imgEstadoMisPreg"
            android:layout_width="109dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2E7335"
            android:visibility="invisible"
            app:srcCompat="@drawable/estado" />

        <ImageView
            android:id="@+id/imgEstadoMisRes"
            android:layout_width="108dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2E7335"
            android:visibility="invisible"
            app:srcCompat="@drawable/estado" />

        <ImageView
            android:id="@+id/imgEstadoCanje"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2E7335"
            android:visibility="invisible"
            app:srcCompat="@drawable/estado" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="2dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <Button
            android:id="@+id/todo"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:background="@drawable/botones"
            android:padding="0dp"
            android:text="@string/todo"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="8sp" />

        <Button
            android:id="@+id/Matemática"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botones_blancos"
            android:padding="0dp"
            android:text="@string/matem_tica"
            android:textAllCaps="false"
            android:textColor="#072D4B"
            android:textSize="8sp" />

        <Button
            android:id="@+id/Física"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botones_blancos"
            android:padding="0dp"
            android:text="@string/f_sica"
            android:textAllCaps="false"
            android:textColor="#072D4B"
            android:textSize="8sp" />

        <Button
            android:id="@+id/Química"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botones_blancos"
            android:padding="0dp"
            android:text="@string/qu_mica"
            android:textAllCaps="false"
            android:textColor="#072D4B"
            android:textSize="8sp" />

        <Button
            android:id="@+id/Geometría"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/botones_blancos"
            android:padding="0dp"
            android:text="@string/geometr_a"
            android:textAllCaps="false"
            android:textColor="#072D4B"
            android:textSize="8sp" />
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="com.grupo6.myapplication.PreguntasInicio"
        android:layout_width="406dp"
        android:layout_height="577dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <ImageView
        android:id="@+id/imageViewLupa"
        android:layout_width="24dp"
        android:layout_height="21dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:clickable="true"
        app:layout_constraintStart_toEndOf="@+id/barra_busqueda"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/lupa" />


</androidx.constraintlayout.widget.ConstraintLayout>