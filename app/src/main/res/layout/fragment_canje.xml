<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CanjeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/pregunta1"
            android:layout_width="167dp"
            android:layout_height="160dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/cajas_respuestas"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints">


            <TextView
                android:id="@+id/textViewTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/txtViewPuntosDisponibles"
                android:textAlignment="center"
                android:textColor="#072D4B"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textViewDescripcion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="@string/txtPreguntasValor"
                android:textAlignment="center"
                android:textColor="#81072D4B"
                android:textSize="48sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/canje4"
            android:layout_width="400dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/cajas_respuestas"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/canje3">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="56dp"
                    android:layout_height="64dp"
                    android:src="@drawable/polystyle" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tituloPregunta2"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_margin="10dp"
                        android:text="@string/textViewCuadernosFEPONU"
                        android:textColor="#072D4B"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/descripcionCanje4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:text="@string/txtViewsPts1"
                            android:textColor="#81072D4B" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="pts" />

                        <Button
                            android:id="@+id/btnCanjear"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="0"
                            android:background="@drawable/botones"
                            android:text="@string/btnCanjear"
                            android:textColor="@color/color_fondo"
                            android:textSize="8sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/canje2"
            android:layout_width="400dp"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/cajas_respuestas"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/canje4"
            app:layout_constraintTop_toBottomOf="@+id/canje4">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="56dp"
                    android:layout_height="64dp"
                    android:src="@drawable/billard" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tituloCanje2"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_margin="10dp"
                        android:text="@string/textViewCuadernosFEPONA"
                        android:textColor="#072D4B"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/descripcionCanje2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:text="@string/txtViewsPts3"
                            android:textColor="#81072D4B" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="pts"
                            android:textAlignment="viewStart" />

                        <Button
                            android:id="@+id/btnCanjear2"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="0"
                            android:background="@drawable/botones"
                            android:text="@string/btnCanjear"
                            android:textColor="@color/color_fondo"
                            android:textSize="8sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/canje3"
            android:layout_width="400dp"
            android:layout_height="0dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/cajas_respuestas"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/canje4"
            app:layout_constraintStart_toStartOf="@+id/canje4"
            app:layout_constraintTop_toBottomOf="@+id/pregunta1">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="56dp"
                    android:layout_height="64dp"
                    android:src="@drawable/cuadernos__1_" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tituloCanje3"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_margin="10dp"
                        android:text="@string/textViewCuadernosFEPON"
                        android:textColor="#072D4B"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/descripcionCanje3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="5dp"
                            android:text="@string/txtViewsPts2"
                            android:textColor="#81072D4B" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:text="pts" />

                        <Button
                            android:id="@+id/btnCanjear3"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="40dp"
                            android:layout_weight="0"
                            android:background="@drawable/botones"
                            android:text="@string/btnCanjear"
                            android:textColor="@color/color_fondo"
                            android:textSize="8sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>